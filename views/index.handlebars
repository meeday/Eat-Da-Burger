<h1>Eat-Da-Burger!</h1>

<main>
  <div class="container">
    <div class="row">
    <h2>Add A Burger Option</h2>
      <div class="col s12">
        <form class="addBurger" action="/burgers" method="POST">
          <input type="text" id="name" name="burger_name" placeholder="Add a burger">
          <button type="submit" class="addBurgerButton">Add The Burger</button>
        </form>
      </div>
    </div>
    <div class="row">
      <div class="col s6">
        <h2>Yet to Devour!</h2>
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
                <p>{{this.burger_name}}<span><button data-id="{{this.id}}" class="devour waves-effect waves-light btn">Devour!</button></span>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        <h2>Devoured!</h2>
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>
